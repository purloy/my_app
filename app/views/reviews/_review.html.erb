<div class = "review-rating" data-score= "<%= review.rating %>"></div>
<p><%= review.comment %></p>

<% if user_signed_in? %>
	<% if review.user_id == current_user.id %>
		<%= link_to 'Edit', edit_book_review_path(review.book, review), class: "btn btn-primary" %>
		<%= link_to 'Delete', book_review_path(review.book, review), method: :delete, data: { confirm: 'Are you sure?'}, class: "btn btn-danger" %><br> <br>
	<% end %>
<% end %>
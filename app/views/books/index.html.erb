<%= tinymce %>

<p id="notice"><%= notice %></p>

<h1> <%= params[:category]%></h1>

<% if @books.count == 0%>

  <h2>No book in this category</h2>

<% else %>

  <div class = "row">
  
    
      <% @books.each do |book| %>

        <div class = "col-md-3">
          <div class = "book">
            <a href="/books/<%= book.id %>">

              <%= image_tag book.book_img.url(:book_index), class: "book" %>

            </a>
         </div>
        </div>

      <% end %>

    </div>

 

<% end %>
